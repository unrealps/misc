<background>
    <starttime>
        <year>2011</year>
        <month>11</month>
        <day>24</day>
        <hour>9</hour>
        <minute>00</minute>
        <second>00</second>
    </starttime>
 
    <!-- This animation will start at 9 AM. -->
    <static>
        <duration>32400.0</duration>
        <file>
            <!-- Wide 16:9 -->
            <size width="1920" height="1080">/usr/share/backgrounds/mojave/default/tv-wide/mojave-day.png</size>
            <!-- Wide 16:10 -->
            <size width="1920" height="1200">/usr/share/backgrounds/mojave/default/wide/mojave-day.png</size>
            <!-- Standard 4:3 -->
            <size width="2048" height="1536">/usr/share/backgrounds/mojave/default/standard/mojave-day.png</size>
            <!-- Normalish 5:4 -->
            <size width="1280" height="1024">/usr/share/backgrounds/mojave/default/normalish/mojave-day.png</size>
        </file>
    </static>
 
    <!-- This animation will start at 6 PM. -->
    <transition type="overlay">
        <duration>54000.0</duration>
        <from>
            <file>
                <!-- Wide 16:9 -->
                <size width="1920" height="1080">/usr/share/backgrounds/mojave/default/tv-wide/mojave-night.png</size>
                <!-- Wide 16:10 -->
                <size width="1920" height="1200">/usr/share/backgrounds/mojave/default/wide/mojave-night.png</size>
                <!-- Standard 4:3 -->
                <size width="2048" height="1536">/usr/share/backgrounds/mojave/default/standard/mojave-night.png</size>
                <!-- Normalish 5:4 -->
                <size width="1280" height="1024">/usr/share/backgrounds/mojave/default/normalish/mojave-night.png</size>
            </file>
        </from>
        <to>
            <file>
                <!-- Wide 16:9 -->
                <size width="1920" height="1080">/usr/share/backgrounds/mojave/default/tv-wide/mojave-night.png</size>
                <!-- Wide 16:10 -->
                <size width="1920" height="1200">/usr/share/backgrounds/mojave/default/wide/mojave-night.png</size>
                <!-- Standard 4:3 -->
                <size width="2048" height="1536">/usr/share/backgrounds/mojave/default/standard/mojave-night.png</size>
                <!-- Normalish 5:4 -->
                <size width="1280" height="1024">/usr/share/backgrounds/mojave/default/normalish/mojave-night.png</size>
            </file>
        </to>
    </transition>
</background>
